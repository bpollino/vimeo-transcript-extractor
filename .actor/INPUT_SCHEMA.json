{
    "title": "Vimeo Transcript Extractor",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "video_url": {
            "title": "Vimeo Video URL",
            "type": "string",
            "description": "Vimeo video URL to extract transcript from",
            "example": "https://vimeo.com/1109387993",
            "editor": "textfield"
        },
        "language": {
            "title": "Language (Optional)",
            "type": "string",
            "description": "Preferred transcript language",
            "example": "en",
            "editor": "textfield"
        }
    },
    "required": ["video_url"]
}
